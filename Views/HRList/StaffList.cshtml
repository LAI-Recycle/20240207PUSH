@using WebApplication1.Models;
@model List<StaffList>

@{
    ViewBag.Title = "Staff List Page";
}

<div class="page-title">
    <h3>
        員工資料清單
    </h3>
</div>
<br />
<table class="table table-striped table-hover">
    <thead>
        <tr >
            <th>#</th>
            <th>編號</th>
            <th>名稱</th>
            <th>日期</th>
            <th>性別</th>
            <th>服兵役</th>
            <th>交通方式</th>
            <th>地址縣市</th>
            <th>地址鄉鎮</th>
            <th>地址門牌</th>
            <th></th>
        </tr>
</thead>
    <tbody>
        @foreach (StaffList ppm99 in Model)
        {
            <tr>
                <td>
                    <input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1">
                </td>
                <td>
                    @Html.ActionLink(ppm99.ppm99_stfn, "UpdateStaffDetail", "HRDetail", new { id = ppm99.ppm99_stfn }, null)
                </td>
                <td>@ppm99.ppm99_name</td>
                <td>@ppm99.ppm99_jdate</td>
                <td>
                    @{
                        if (ppm99.ppm99_gender == "M")
                        {
                            @:男
                        }
                        else if(ppm99.ppm99_gender == "F")
                        {
                            @:女
                        }
                        else
                        {
                            @:未填寫
                        }
                    }
                </td>
                <td>@ppm99.ppm99_military</td>
                <td>@ppm99.ppm99_transportList</td>
                <td>@ppm99.ppm99_city</td>
                <td>@ppm99.ppm99_zone</td>
                <td>@ppm99.ppm99_addr</td>
                <td>
                    @Html.ActionLink("編輯", "UpdateStaffDetail", "HRDetail", new { id = ppm99.ppm99_stfn }, null)
                </td>
            </tr>
        }
    </tbody>
</table>